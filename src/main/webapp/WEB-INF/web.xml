<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>org.project.websource.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>logout</servlet-name>
    <servlet-class>org.project.websource.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>sessions</servlet-name>
    <servlet-class>org.project.websource.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>sessions</servlet-name>
    <url-pattern>/sessions</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>add_session</servlet-name>
    <servlet-class>org.project.websource.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>add_session</servlet-name>
    <url-pattern>/add_session</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>edit_sessions</servlet-name>
    <servlet-class>org.project.websource.FrontController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>edit_sessions</servlet-name>
    <url-pattern>/edit_sessions</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>signIn</servlet-name>
    <servlet-class>org.project.websource.FrontController</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>signIn</servlet-name>
    <url-pattern>/signIn</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>AuthenticationFilter</filter-name>
    <filter-class>org.project.websource.filter.AuthenticationFilter</filter-class>
    <init-param>
      <param-name>active</param-name>
      <param-value>true</param-value>
    </init-param>
  </filter>

  <filter-mapping>
    <filter-name>AuthenticationFilter</filter-name>
    <url-pattern>/cart</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>SessionLocaleFilter</filter-name>
    <filter-class>org.project.websource.filter.SessionLocaleFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>SessionLocaleFilter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>utf8filter</filter-name>
    <filter-class>org.project.websource.filter.UtfFilter</filter-class>
  </filter>

  <filter-mapping>
    <filter-name>utf8filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
</web-app>



